        <class>org.n52.series.db.beans.sta.LicenseEntity</class>
        <class>org.n52.series.db.beans.sta.PartyEntity</class>
        <class>org.n52.series.db.beans.sta.ProjectEntity</class>

        <exclude-unlisted-classes>true</exclude-unlisted-classes>
        <properties>
            <property name="hibernate.archive.autodetection" value="class"/>
        </properties>
    </persistence-unit>
</persistence>
