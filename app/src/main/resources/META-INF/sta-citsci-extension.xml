        <class>org.n52.series.db.beans.sta.mapped.extension.CategoryCSObservation</class>
        <class>org.n52.series.db.beans.sta.mapped.extension.BooleanCSObservation</class>

        <exclude-unlisted-classes>true</exclude-unlisted-classes>
        <properties>
            <property name="hibernate.archive.autodetection" value="class"/>
        </properties>
    </persistence-unit>
